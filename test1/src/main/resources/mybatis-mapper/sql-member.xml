<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.MemberMapper">
	<select id="memberLogin" parameterType="hashmap" resultType="com.example.test1.model.Member">
		SELECT *
		FROM TBL_USER
		WHERE USERID = #{id} <!--AND PASSWORD = #{pwd} 해시 적용 후 제거-->
		<!-- #{} 안의 이름과, jsp에서 보낸 파라미터의 이름은 같아야 함 -->
	</select>
	<!--<select id="memberLoginPwd" parameterType="hashmap" resultType="com.example.test1.model.Member">
		SELECT *
		FROM TBL_USER
		WHERE AND PASSWORD = #{pwd}
		 #{} 안의 이름과, jsp에서 보낸 파라미터의 이름은 같아야 함 
	</select>-->
	
	<select id="memberIdCheck" parameterType="hashmap" resultType="com.example.test1.model.Member">
		SELECT *
		FROM TBL_USER
		WHERE USERID = #{id}
	</select>
	
	<insert id="memberAdd" parameterType="hashmap">
		INSERT INTO TBL_USER(USERID, PASSWORD, NAME, ADDRESS, PHONE, GENDER, STATUS, CDATETIME, UDATETIME, CNT)
		VALUES(#{id}, #{hashPwd}, #{name}, #{addr}, #{phone}, #{gender}, #{status}, SYSDATE, SYSDATE, 0)
	</insert>
	
	<select id="memberProfileList" parameterType="hashmap" resultType="com.example.test1.model.User">
		SELECT *
		FROM TBL_USER_FILE
		WHERE USERID = #{userId}
	</select>
	
	<select id="mgrMemberList" parameterType="hashmap" resultType="com.example.test1.model.Member">
		SELECT 
			U.*, 
			DECODE(
				BIRTH, 
				NULL,
				'정보없음', 
				SUBSTR(BIRTH,3,2)||'.'||SUBSTR(BIRTH,5,2)||'.'||SUBSTR(BIRTH,7,2) 
			) AS UBIRTH
		FROM TBL_USER U
	</select>
	
	<update id="loginCntUp" parameterType="hashmap">
	<!--로그인 실패 시-->
		UPDATE TBL_USER
		SET 
			CNT = CNT+1
		WHERE USERID = #{id}
	</update>
	
	<update id="loginCntReset" parameterType="hashmap">
	<!--로그인 성공 시-->
		UPDATE TBL_USER
		SET 
			CNT = 0
		WHERE USERID = #{id}
	</update>
	
	<select id="selectPwdFind" parameterType="hashmap" resultType="com.example.test1.model.Member">
		SELECT *
		FROM TBL_USER
		WHERE 
			USERID = #{id}
			AND NAME = #{name}
			AND REPLACE(PHONE,'-', '') = #{phone}
			<!--내가 했던 버전. SUBSTR을 써도 되지만, 다른 번호일때 귀찮아질 수 있음-->
			<!--PHONE = SUBSTR(#{phone},1,3)||'-'||SUBSTR(#{phone},4,4)||'-'||SUBSTR(#{phone},8,4)-->
	</select>
	
	<select id="selectPwdFind2" parameterType="hashmap" resultType="int">
	<!-- selectPwdFind와 같은 기능이지만, 결과의 수가 1인지 0인지로 판별 -->
		SELECT COUNT(*)
		FROM TBL_USER
		WHERE 
			USERID = #{id}
			AND NAME = #{name}
			AND REPLACE(PHONE,'-', '') = REPLACE(#{phone},'-', '')
			<!--PHONE = SUBSTR(#{phone},1,3)||'-'||SUBSTR(#{phone},4,4)||'-'||SUBSTR(#{phone},8,4)-->
			
	</select>
	
	<update id="memberPwdChange" parameterType="hashmap">
		UPDATE TBL_USER
		SET 
			PASSWORD = #{hashPwd}
		WHERE USERID = #{id}
	</update>
</mapper>




